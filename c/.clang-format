---
Language: Cpp
Standard: c++14
# BasedOnStyle: LLVM

TabWidth: 4
UseTab: Never
AccessModifierOffset: -4

AlignAfterOpenBracket: DontAlign
AlignArrayOfStructures: Right # Clang 13
AlignConsecutiveAssignments: None
AlignConsecutiveBitFields: None # Clang 11
AlignConsecutiveDeclarations: None  # Error? => Update your IDE
AlignConsecutiveMacros: Consecutive # Clang 9
AlignConsecutiveShortCaseStatements: # Clang 17
  Enabled: false
  AcrossEmptyLines: false
  AcrossComments: false
  AlignCaseColons: false
AlignEscapedNewlines: Left
AlignOperands: false
AlignTrailingComments: # Clang 16
  Kind: Always
  OverEmptyLines: 2

AllowAllArgumentsOnNextLine: true # Clang 9
AllowAllParametersOfDeclarationOnNextLine: false
AllowBreakBeforeNoexceptSpecifier: Never # Clang 18
AllowShortBlocksOnASingleLine: Never
AllowShortCaseExpressionOnASingleLine: false # Clang 19
AllowShortCaseLabelsOnASingleLine: false
AllowShortCompoundRequirementOnASingleLine: true # Clang 18
AllowShortEnumsOnASingleLine: false # Clang 11
AllowShortFunctionsOnASingleLine: None
AllowShortIfStatementsOnASingleLine: false
AllowShortLambdasOnASingleLine: Empty # Clang 9
AllowShortLoopsOnASingleLine: false
# AllowShortNamespacesOnASingleLine: false # Clang 20

AlwaysBreakAfterDefinitionReturnType: None
AlwaysBreakAfterReturnType: None
AlwaysBreakBeforeMultilineStrings: false
AlwaysBreakTemplateDeclarations: Yes

BinPackArguments: true
BinPackParameters: BinPack #  Clang 3.7

BitFieldColonSpacing: Both # Clang 12

BraceWrapping:
  AfterClass: true
  AfterControlStatement: Always
  AfterEnum: true
  AfterFunction: true
  AfterNamespace: true
  AfterStruct: true
  AfterUnion: true
  AfterExternBlock: false
  BeforeCatch: true
  BeforeElse: true
  IndentBraces: false
  SplitEmptyFunction: false
  SplitEmptyRecord: false
  SplitEmptyNamespace: false
BreakAdjacentStringLiterals: true # Clang 18
BreakAfterAttributes: Never # Clang 16
BreakAfterReturnType: Automatic # Clang 19
BreakBeforeBinaryOperators: NonAssignment
BreakBeforeBraces: Custom
BreakBeforeConceptDeclarations: Always # Clang 12
BreakBeforeInlineASMColon: OnlyMultiline # Clang 16
# BreakBeforeTemplateCloser: false # Clang 21
BreakBeforeTernaryOperators: false
# BreakBinaryOperations: Never # Clang 20
BreakFunctionDefinitionParameters: false # Clang 19
BreakConstructorInitializers: BeforeComma
BreakInheritanceList: BeforeComma
BreakStringLiterals: true
BreakTemplateDeclarations: Yes # Clang 19

ColumnLimit: 120
CommentPragmas: '(^\\.+|^IWYUpragma: )'
CompactNamespaces: false
ConstructorInitializerAllOnOneLineOrOnePerLine: false
ConstructorInitializerIndentWidth: 4
ContinuationIndentWidth: 4

Cpp11BracedListStyle: false
DerivePointerAlignment: false
DisableFormat: false
EmptyLineAfterAccessModifier: Never # Clang 13
EmptyLineBeforeAccessModifier: LogicalBlock # Clang 12
# EnumTrailingComma: Remove # Clang 21
ExperimentalAutoDetectBinPacking: false
FixNamespaceComments: true

ForEachMacros: [ 'foreach', 'Q_FOREACH', 'BOOST_FOREACH' ]

IncludeBlocks: Preserve
IncludeCategories:
  - Regex: '<[[:alnum:].]+>'
    Priority: 4
  - Regex: '.*'
    Priority: 1
IncludeIsMainRegex: '$'

IndentAccessModifiers: false # Clang 13
IndentCaseBlocks: false # Clang 11
IndentCaseLabels: false
# IndentExportBlock: true # Clang 20
IndentExternBlock: NoIndent # Clang 11
IndentGotoLabels: false # Clang 11
IndentPPDirectives: AfterHash
IndentRequiresClause: true # Clang 15
IndentWidth: 4
IndentWrappedFunctionNames: false
InsertBraces: true # Clang 15
InsertNewlineAtEOF: true
InsertTrailingCommas: None # Clang 11
IntegerLiteralSeparator: # Clang 16
  Binary: 0
  Decimal: 3
KeepEmptyLines: # Clang 19
  AtEndOfFile: false
  AtStartOfBlock: false
  AtStartOfFile: false
LambdaBodyIndentation: Signature # Clang 13

MacroBlockBegin: 'BEGIN_MESSAGE_MAP'
MacroBlockEnd: 'END_MESSAGE_MAP'
Macros: [ "BENCHMARK(x)=[](x)", "BENCHMARK_ADVANCED(x)=[](x)" ]
MainIncludeChar: Quote # Clang 19

MaxEmptyLinesToKeep: 2

NamespaceIndentation: None

PPIndentWidth: -1 # Clang 13

PackConstructorInitializers: BinPack # Clang 14

PenaltyBreakAssignment: 200
PenaltyBreakBeforeFirstCallParameter: 330
PenaltyBreakComment: 300
PenaltyBreakFirstLessLess: 120
PenaltyBreakString: 1000
PenaltyBreakTemplateDeclaration: 10
PenaltyExcessCharacter: 1000000
PenaltyReturnTypeOnItsOwnLine: 600

PointerAlignment: Left
QualifierAlignment: Leave # Clang 14
# QualifierOrder: [ inline, static, constexpr, type, const, volatile ] # Clang 14
ReferenceAlignment: Pointer # Clang 13

ReflowComments: true
RemoveParentheses: Leave # Clang 17
RemoveSemicolon: true # Clang 16
RequiresClausePosition: OwnLine # Clang 15
RequiresExpressionIndentation: OuterScope # Clang 16

SeparateDefinitionBlocks: Always # Clang 14
SkipMacroDefinitionBody: false # Clang 18
SortIncludes: CaseSensitive
SortUsingDeclarations: true

SpaceAfterCStyleCast: false
SpaceAfterLogicalNot: false # Clang 9
SpaceAfterTemplateKeyword: true
SpaceAroundPointerQualifiers: Default # Clang 12
SpaceBeforeAssignmentOperators: true
SpaceBeforeCaseColon: false # Clang 12
SpaceBeforeCpp11BracedList: false
SpaceBeforeCtorInitializerColon: true
SpaceBeforeInheritanceColon: true
SpaceBeforeParens: ControlStatements
SpaceBeforeRangeBasedForLoopColon: true
SpaceBeforeSquareBrackets: false # Clang 10
SpaceInEmptyParentheses: false
SpacesBeforeTrailingComments: 1
SpacesInAngles: false
SpacesInCStyleCastParentheses: false
SpacesInContainerLiterals: false
SpacesInLineCommentPrefix:  # Clang 13
  Minimum: 1
  Maximum: 1
SpacesInParentheses: false
SpacesInSquareBrackets: false
StatementAttributeLikeMacros: [ emit ] # Clang 12
StatementMacros: [ Q_UNUSED ] # Clang 8
...